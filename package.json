{
  "name": "@zestia/ember-modal-dialog",
  "version": "3.3.0",
  "description": "A simple modal dialog component for Ember apps",
  "keywords": [
    "ember-addon",
    "modal",
    "dialog",
    "popup",
    "prompt"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zestia/ember-modal-dialog.git"
  },
  "license": "MIT",
  "author": "Zestia",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "build": "ember build --environment=production",
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel \"lint:!(fix)\"",
    "lint:fix": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*:fix",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "lint:css:fix": "stylelint '**/*.{css,scss}' --fix",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "start": "ember serve",
    "test": "npm-run-all lint test:ember",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each",
    "prettier": "prettier . --write",
    "release": "release-it",
    "deploy": "ember build --environment production && ember github-pages:commit --message \"Deploy gh-pages from commit $(git rev-parse HEAD)\" && git push origin gh-pages:gh-pages"
  },
  "dependencies": {
    "@ember/render-modifiers": "^1.0.2",
    "@ember/test-waiters": "^3.0.0",
    "@zestia/animation-utils": "^3.0.0",
    "@zestia/ember-auto-focus": "^4.1.7",
    "body-scroll-lock": "^3.1.5",
    "ember-auto-import": "^1.11.2",
    "ember-cli-babel": "^7.26.6",
    "ember-cli-htmlbars": "^5.7.1"
  },
  "devDependencies": {
    "@ember/optional-features": "^2.0.0",
    "@ember/test-helpers": "^2.4.2",
    "@embroider/test-setup": "^0.45.0",
    "@glimmer/component": "^1.0.4",
    "@glimmer/tracking": "^1.0.4",
    "@zestia/eslint-config": "^4.0.6",
    "@zestia/prettier-config": "^1.0.5",
    "@zestia/stylelint-config": "^3.0.2",
    "@zestia/template-lint-config": "^4.1.3",
    "babel-eslint": "^10.1.0",
    "broccoli-asset-rev": "^3.0.0",
    "ember-cli": "^3.27.0",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-github-pages": "^0.2.2",
    "ember-cli-inject-live-reload": "^2.1.0",
    "ember-cli-sass": "^10.0.1",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-terser": "^4.0.2",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-load-initializers": "^2.1.2",
    "ember-maybe-import-regenerator": "^1.0.0",
    "ember-qunit": "^5.1.4",
    "ember-resolver": "^8.0.3",
    "ember-source": "~3.26.1",
    "ember-source-channel-url": "^3.0.0",
    "ember-template-lint": "^3.8.0",
    "ember-try": "^1.4.0",
    "eslint": "^7.32.0",
    "eslint-plugin-hbs": "^1.0.3",
    "loader.js": "^4.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "qunit": "^2.17.2",
    "qunit-dom": "^2.0.0",
    "release-it": "^14.11.6",
    "sass": "^1.42.1",
    "stylelint": "^13.13.1"
  },
  "engines": {
    "node": "10.* || >= 12"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "configPath": "tests/dummy/config",
    "demoURL": "https://zestia.github.io/ember-modal-dialog"
  }
}
