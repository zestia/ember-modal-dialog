{{! template-lint-disable no-down-event-binding }}
<div
  class={{concat
    "modal-dialog "
    "modal-dialog--"
    (if this.isShowing "showing" "hiding")
    (if this.isWarning " modal-dialog--warning")
    (if this.isLoading " modal-dialog--loading")
    (unless this.inViewport " modal-dialog--exceeds-viewport")
  }}
  role="dialog"
  tabindex="0"
  aria-modal="true"
  ...attributes
  {{auto-focus}}
  {{this.registerElement}}
  {{this.notifyRoot}}
  {{this.bodyScrollLock}}
  {{this.monitorContent}}
  {{this.monitorViewport}}
  {{this.ready}}
  {{on "mousedown" this.handleMouseDown}}
  {{on "mouseup" this.handleMouseUp}}
  {{on "keydown" this.handleKeyDown}}
  {{on "animationend" this.handleAnimationEnd}}
>
  <div class="modal-dialog__box" {{this.registerBoxElement}}>
    {{yield this.api}}
  </div>
</div>