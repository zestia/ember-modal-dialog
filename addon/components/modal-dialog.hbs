{{! template-lint-disable no-down-event-binding }}
<div
  class={{
    concat
    "modal-dialog "
    "modal-dialog--"
    (if this.isShowing "showing" "hiding")
    (if this.isWarning " modal-dialog--warning")
    (if this.isLoading " modal-dialog--loading")
    (if this.isTooTall " modal-dialog--too-tall")
  }}
  role="dialog"
  tabindex="0"
  aria-modal="true"
  ...attributes
  {{this.this.handleElementLifecycle}}
  {{on "click" this.handleClick}}
  {{on "keyup" this.handleKeyUp}}
  {{on "keydown" this.handleKeyDown}}
>
  <div class="modal-dialog__box" {{this.handleBoxElementLifecycle}}>
    {{yield
      (hash
        Header=(component "modal-dialog/header")
        Content=(component "modal-dialog/content")
        Footer=(component "modal-dialog/footer")
        close=this.close
        isLoading=this.isLoading
        boxElement=this.boxElement
      )
    }}
  </div>
</div>